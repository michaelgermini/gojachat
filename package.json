{
  "name": "gojachat",
  "version": "1.0.0",
  "description": "A simple messaging application to demonstrate front â†” back integration",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd packages/api && npm run dev",
    "dev:web": "cd packages/web && npm start",
    "dev:mobile": "cd packages/mobile && npm start",
    "build": "npm run build:web",
    "build:web": "cd packages/web && npm run build",
    "test": "npm run test:web && npm run test:api",
    "test:web": "cd packages/web && npm test",
    "test:api": "cd packages/api && npm test",
    "lint": "npm run lint:web && npm run lint:api",
    "lint:web": "cd packages/web && npm run lint",
    "lint:api": "cd packages/api && npm run lint",
    "format": "prettier --write \"packages/**/*.{js,jsx,ts,tsx,json,md}\"",
    "install:all": "npm install && cd packages/api && npm install && cd ../web && npm install && cd ../mobile && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-keywords": "^5.1.0",
    "react-refresh": "^0.17.0"
  }
}
